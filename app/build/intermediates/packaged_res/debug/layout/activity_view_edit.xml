<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentViewEdit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ViewEdit">


    <ImageView
        android:id="@+id/imgViewEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_launcher_background" />

    <RelativeLayout
        android:id="@+id/parentSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_alignTop="@+id/navigation_edit_view">


        <LinearLayout
            android:id="@+id/cropOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:visibility="visible"
            >

            <ImageView
                android:id="@+id/rotatePic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="30dp"
                android:src="@mipmap/ic_rotate_left" />

            <ImageView
                android:id="@+id/flipPic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="30dp"
                android:src="@mipmap/ic_flip" />

            <ImageView
                android:id="@+id/resizePic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="30dp"
                android:src="@mipmap/ic_resize" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/filterOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:visibility="gone"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/filterRecView"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/brightnessOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:visibility="gone"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/brightnessRecView"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/emoteOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/paintPic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="30dp"
                android:src="@mipmap/ic_paint" />

            <ImageView
                android:id="@+id/stickerPic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="30dp"
                android:src="@mipmap/ic_sticker" />

            <ImageView
                android:id="@+id/textPic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="30dp"
                android:src="@mipmap/ic_text" />
        </LinearLayout>
    </RelativeLayout>


