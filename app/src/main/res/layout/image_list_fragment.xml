<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorOnSurface"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="20sp"
            android:layout_weight="1"
            android:textColor="?attr/colorSurface"
            android:layout_gravity="center_vertical"
            tools:ignore="HardcodedText">
        </TextView>

        <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imgBtnBackContainer"
            android:layout_width="65dp"
            android:layout_height="35dp"
            app:cardCornerRadius="20dp">

            <ImageButton
                android:id="@+id/imgBtnBack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_back"
                android:tint="?attr/colorOnPrimary"
                android:background="@drawable/bg_shape_conner_5"                android:layout_gravity="center"
                tools:ignore="ContentDescription,UseAppTint" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imgBtnChangeViewContainer"
            android:layout_width="65dp"
            android:layout_height="35dp"
            app:cardCornerRadius="20dp">

            <ImageButton
                android:id="@+id/imgBtnChangeView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_view_grid"
                android:tint="?attr/colorOnPrimary"
                android:background="@drawable/bg_shape_conner_5"                android:layout_gravity="center"
                tools:ignore="ContentDescription,UseAppTint" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/imageRecView"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>