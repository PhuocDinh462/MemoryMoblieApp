<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ViewImage">

    <RelativeLayout
        android:id="@+id/parentHeader"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/light_blue"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:contentDescription="@string/action_back"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:src="@mipmap/ic_back" />
    </RelativeLayout>

    <com.example.memorymoblieapp.controI_image.ZoomableViewPager
        android:id="@+id/viewPaperMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="View main image" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_nav"
        android:backgroundTint="@color/light_blue"
        android:paddingBottom="10dp"
        app:itemIconTint="@color/black"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/navigation_setting_image" />
</RelativeLayout>
