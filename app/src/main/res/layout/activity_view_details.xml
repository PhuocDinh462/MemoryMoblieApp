<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnBackground"
    tools:context=".view.ViewDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconCalender"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@mipmap/ic_calendar"
                android:tint="?attr/colorSurface"
                tools:ignore="UseAppTint" />

            <TextView
                android:id="@+id/txtDateCreated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ngay thang nam gio"
                android:textColor="?attr/colorSurface" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconImage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@mipmap/ic_image"
                android:tint="?attr/colorSurface"
                tools:ignore="UseAppTint" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtNameImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ten anh"
                    android:textColor="?attr/colorSurface" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtImageCapacity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1,31 MB"
                        android:textColor="?attr/colorSurface"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txtImageSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="3000x4000"
                        android:textColor="?attr/colorSurface"
                        android:textSize="13sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtPathImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="/Tháº» SD/DCIM/Camera"
                    android:textColor="?attr/colorSurface"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>